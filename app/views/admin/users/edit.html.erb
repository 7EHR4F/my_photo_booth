<h1>Edit Account</h1>
 
<% form_for @user do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update" %>
<% end %>
 
<br /><%= link_to("Delete user", { :action => "destroy", :id => @user },
  :confirm => "Are you sure you want to delete this user?",
  :method => :delete) %>

<br /><%= link_to "All users", users_path %>