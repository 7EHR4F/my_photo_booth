<h1>Edit Photo</h1>

<%= image_tag @photo.path_modified_public("preview") %>
 
<% form_for @photo do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update" %>
<% end %>

<% content_for :action_links do %>
<%= link_to("Delete photo", { :action => "destroy", :id => @photo },
  :confirm => "Are you sure you want to delete this photo?",
  :method => :delete) %>
<% end %>